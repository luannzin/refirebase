{
  "name": "refirebase",
  "version": "0.1.1",
  "description": "ðŸ”¥ New easiest Firebase API",
  "author": "gelzin.com",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "dev": "bun run src/index.ts --watch",
    "build": "bun build src/index.ts --target=node --outdir=dist",
    "format:apply": "biome check --apply .",
    "format:check": "biome format .",
    "format": "biome format --write .",
    "lint": "biome check .",
    "prepublishOnly": "bun run build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/refirebase/refirebase.git"
  },
  "keywords": [
    "refirebase",
    "firebase",
    "react",
    "vite",
    "svelte",
    "angular",
    "vue",
    "next",
    "typescript",
    "javascript"
  ],
  "homepage": "https://refirebase.github.io",
  "bugs": {
    "url": "https://github.com/refirebase/refirebase/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/node": "18.19.44",
    "@types/react": "18.3.3",
    "ts-node": "10.9.2",
    "tsup": "7.2.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.7.1",
  "dependencies": {
    "firebase": "^10.13.1"
  }
}
